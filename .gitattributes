# Set the default behavior for all files
* text=auto

# Normalize EOL for all files that Git considers text files
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf

# Ensure these files are always treated as text and get LF line endings
*.htaccess text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Ensure these files are treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.dmg binary
*.iso binary
*.jar binary

# Font files
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Archive attributes for GitHub releases and Composer
# These files will be excluded from the zip/tar.gz archives
/.git export-ignore
/.github export-ignore
/.gitignore export-ignore
/.gitattributes export-ignore
/.editorconfig export-ignore
/.eslintrc export-ignore
/.stylelintrc export-ignore
/tests export-ignore
/phpunit.xml export-ignore
/phpcs.xml.dist export-ignore
/package.json export-ignore
/yarn.lock export-ignore
/node_modules export-ignore
/src export-ignore
/webpack.config.js export-ignore
/.env.example export-ignore
/.env.local export-ignore
/composer.lock export-ignore
/CONTRIBUTING.md export-ignore

# Language files - mark as linguist documentation
/languages/*.po linguist-documentation
/languages/*.pot linguist-documentation
/languages/*.mo linguist-documentation

# Generated files - don't include in language statistics
/dist/* linguist-generated
/vendor/* linguist-vendored

# Documentation files
*.md linguist-documentation 